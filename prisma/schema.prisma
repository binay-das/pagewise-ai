generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pdfSummaries PdfSummary[]
}

model PdfSummary {
  id              String   @id @default(cuid())
  userId          String
  originalFileUrl String
  fileName        String?
  summaryText     String
  extractedText   String
  title           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  chunks DocumentChunk[]
}



model DocumentChunk {
  id           String   @id @default(cuid())
  content      String

  embedding    Unsupported("vector(768)")?

  pdfSummaryId String
  pdfSummary   PdfSummary @relation(fields: [pdfSummaryId], references: [id], onDelete: Cascade)

  @@index([pdfSummaryId])
}
