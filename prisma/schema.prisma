generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pdfSummaries PdfSummary[]
}

model PdfSummary {
  id                String   @id @default(cuid())
  userId            String
  originalFileUrl   String
  fileName          String?
  summaryText       String
  extractedTextKey  String?
  wordCount         Int      @default(0)
  title             String?
  embeddingProvider String   @default("gemini")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  chunks   DocumentChunk[]
  messages Message[]
}

model DocumentChunk {
  id      String @id @default(cuid())
  content String

  embedding_ollama Unsupported("vector(768)")?
  embedding_gemini Unsupported("vector(3072)")?

  pdfSummaryId String
  pdfSummary   PdfSummary @relation(fields: [pdfSummaryId], references: [id], onDelete: Cascade)

  @@index([pdfSummaryId])
}

model Message {
  id        String   @id @default(cuid())
  role      String
  content   String   @db.Text
  createdAt DateTime @default(now())

  pdfSummaryId String
  pdfSummary   PdfSummary @relation(fields: [pdfSummaryId], references: [id], onDelete: Cascade)

  @@index([pdfSummaryId])
  @@index([createdAt])
}
